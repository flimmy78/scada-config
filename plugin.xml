<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.ht.scada.config.scadaconfig.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="监控对象透视图"
            class="com.ht.scada.config.perspective.ScadaObjectPerspective"
            id="com.ht.scada.config.perspective.ScadaObjectPerspective">
      </perspective>
      <perspective
            class="com.ht.scada.config.perspective.ScadaObjectPerspective"
            id="com.ht.scada.config.perspective.ScadaObjectPerspective"
            name="监控对象透视图">
      </perspective>
      <perspective
            class="com.ht.scada.config.perspective.RTURemotePerspective"
            id="com.ht.scada.config.perspective.RTURemotePerspective"
            name="RTU远程配置透视图">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="监控对象导航树"
            allowMultiple="true"
            icon="icons/sample2.gif"
            class="com.ht.scada.config.view.ScadaObjectTreeView"
            id="com.ht.scada.config.view.ScadaObjectTreeView">
      </view>
      <view
            name="配置索引"
            allowMultiple="true"
            icon="icons/sample3.gif"
            class="com.ht.scada.config.view.MainIndexView"
            id="com.ht.scada.config.view.MainIndexView">
      </view>
      <view
            allowMultiple="true"
            class="com.ht.scada.config.view.EndTagView"
            icon="icons/sample3.gif"
            id="com.ht.scada.config.view.EndTagView"
            name="配置监控对象">
      </view>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="scada-config.application"
            name="RCP Product">
         <property
               name="aboutText"
               value="RCP Mail template created by PDE">
         </property>
         <property
               name="windowImages"
               value="icons/sample2.gif">
         </property>
         <property
               name="aboutImage"
               value="product_lg.gif">
         </property>
         <property
               name="appName"
               value="RCP Product">
         </property>
      </product>
   </extension>

</plugin>
